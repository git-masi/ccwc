{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug word count with active file",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/main.go",
            "args": [
                "-w",
                "${file}"
            ]
        },
        {
            "name": "Debug character count with active file",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/main.go",
            "args": [
                "-m",
                "${file}"
            ]
        }
    ]
}